meta {
  name: Streaming completion (PII echo demo)
  type: http
  seq: 3
}

post {
  url: {{router_base_url}}/v1/chat/completions
  body: json
  auth: inherit
}

headers {
  Authorization: Bearer {{router_api_key}}
  Content-Type: application/json
}

body:json {
  {
    "model": "{{demo_model}}",
    "stream": true,
    "temperature": 0,
    "messages": [
      {
        "role": "user",
        "content": "Use these values exactly as written: email ivan.petrov@example.com and passport 4510 667788."
      },
      {
        "role": "user",
        "content": "Return 5 numbered lines; every line must include both values exactly as written."
      }
    ]
  }
}

settings {
  encodeUrl: true
}
