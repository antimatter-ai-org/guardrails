      "name": "Guardrails session finalize (manual debug)",
      "request": {
        "method": "POST",
        "header": [],
        "url": {
          "raw": "{{guardrails_base_url}}/v1/guardrails/sessions/{{session_id}}/finalize",
          "host": [
            "{{guardrails_base_url}}"
          ],
          "path": [
            "v1",
            "guardrails",
            "sessions",
            "{{session_id}}",
            "finalize"
          ]
        }
      }
    }
  ]
