FROM pytorch/pytorch:2.4.1-cuda12.1-cudnn9-runtime

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

WORKDIR /app

COPY pyproject.toml README.md ./
COPY app ./app
COPY configs ./configs
COPY docs ./docs

# Torch with CUDA is provided by base image.
RUN pip install --upgrade pip && pip install -e '.[ml,gpu]'

EXPOSE 8000 8001 8002

CMD ["python", "-m", "app.pytriton_server.main"]
